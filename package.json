{
  "name": "mags-assistant",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "echo 'lint ok'",
    "test": "node -e \"const fs=require('fs');fs.mkdirSync('docs',{recursive:true});const p='docs/.brain.md';if(!fs.existsSync(p))fs.writeFileSync(p,'');\" && vitest run tests/testBrain.test.ts tests/brain-watch.test.ts",
    "build": "echo 'build ok'",
    "testSECRETS": "if command -v tsx >/dev/null 2>&1; then tsx scripts/testSECRETS.ts; else echo 'testSECRETS skipped'; fi",
    "maggie": "tsx runMaggie.ts",
    "maggie:env": "node -r dotenv/config scripts/maggie-env.js",
    "deploy": "echo '⛴️ Deploy placeholder — replace with wrangler publish, vercel deploy, etc.'",
    "deploy:cli": "npx wrangler deploy",
    "format": "prettier --write .",
    "dev": "vite"
  },
  "dependencies": {
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.4.5",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.12",
    "tsx": "^3.12.7",
    "vitest": "^1.3.1"
  }
}
